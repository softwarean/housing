.row
  .col-md-6
    %h1= t('.streets')
    %br
  .col-md-6
    .pull-right
      = link_to t('add'), new_admin_street_path, class: 'btn btn-default btn-lg btn-primary'
.row
  .col-md-12
    %table.table.table-hover.table-condensed.table-striped
      %tr
        %th= sort_link @q, :name, t('.name')
        %th= t('edit')
        %th= t('delete')
      - @streets.each do |street|
        %tr
          %td= street.name
          %td
            = link_to edit_admin_street_path(street) do
              %span.glyphicon.glyphicon-pencil{ aria: { hidden: true } }
          %td
            = link_to admin_street_path(street), method: :delete, data: { confirm: t('are_you_sure')} do
              %span.glyphicon.glyphicon-remove{ aria: { hidden: true } }
.row
  .col-md-12
    = paginate @streets
