.row
  .col-md-6
    %h1= t('.services')
    %br
  .col-md-6
    .pull-right
      = link_to t('add'), new_admin_service_path, class: 'btn btn-default btn-lg btn-primary'
.row
  .col-md-12
    %table.table.table-hover.table-condensed.table-striped
      %tr
        %th= sort_link @q, :name
        %th= sort_link @q, :cost
        %th= t('edit')
        %th= t('delete')
      - @services.each do |service|
        %tr
          %td= service.name
          %td= service.cost
          %td
            = link_to edit_admin_service_path(service) do
              %span.glyphicon.glyphicon-pencil{ aria: { hidden: true } }
          %td
            = link_to admin_service_path(service), method: :delete, data: { confirm: t('are_you_sure')} do
              %span.glyphicon.glyphicon-remove{ aria: { hidden: true } }
.row
  .col-md-12
    = paginate @services
